<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/registerGroup"
        tools:ignore="UselessParent"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerLine"
        >
            <EditText
                android:id="@+id/uiNameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="IP address"
                android:ems="8"
                android:inputType="text"
                android:minHeight="50sp"
                android:hint="@string/unesite_ime"
                android:textSize="40sp"
                tools:ignore="LabelFor"
            />
            <Button
                android:id="@+id/uiRegisterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:text="@string/registruj_se"
                android:textSize="42sp"
            />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
